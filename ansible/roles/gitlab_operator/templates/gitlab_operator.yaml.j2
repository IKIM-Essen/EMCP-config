apiVersion: apps.gitlab.com/v1beta1
kind: GitLab
metadata:
  name: gitlab-instance
  namespace: {{ gitlab_namespace }}
spec:
  chart:
    version: "{{ gitlab_chart_version }}" 
    values:
      global:
        hosts:
          domain: {{ gitlab_domain }}
          externalIP: {{ gitlab_lb_ip }}
          https: false
        ingress:
          enabled: true
          configure_certmanager: false
