worker_processes 4;
worker_rlimit_nofile 40000;

events {
    worker_connections 8192;
}

stream {
    upstream rancher_servers_http {
        least_conn;
{% for rancher_node in groups['rancher_cluster_nodes'] %}
        server {{ rancher_node }}:80 max_fails=3 fail_timeout=5s;
{% endfor %}
    }
    server {
        listen 80;
        proxy_pass rancher_servers_http;
    }

    upstream rancher_servers_https {
        least_conn;
{% for rancher_node in groups['rancher_cluster_nodes'] %}
        server {{ rancher_node }}:443 max_fails=3 fail_timeout=5s;
{% endfor %}
    }
    server {
        listen     443;
        proxy_pass rancher_servers_https;
    }

}