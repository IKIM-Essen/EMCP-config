apiVersion: mariadb.mmontes.io/v1alpha1
kind: MariaDB
metadata:
  name: mariadb
  namespace: {{ redcap_mariadb_namespace }}
spec:
  rootPasswordSecretKeyRef:
    name: mariadb
    key: root-password

  database: {{ redcap_mariadb_database }}
  username: {{ redcap_mariadb_user }}
  passwordSecretKeyRef:
    name: user
    key: password

  image:
    repository: mariadb
    tag: {{ redcap_mariadb_image_tag }}
    pullPolicy: IfNotPresent

  port: 3306

  myCnfConfigMapKeyRef:
    name: mariadb-my-cnf
    key: config

  # See https://projectredcap.org/software/requirements/
  volumeClaimTemplate:
    resources:
      requests:
        storage: 10Gi
    storageClassName: longhorn
    accessModes:
      - ReadWriteOnce

  resources:
    requests:
      cpu: 2
      memory: 4Gi
    limits:
      cpu: 4
      memory: 8Gi

  env:
    - name: TZ
      value: SYSTEM

  envFrom:
    - configMapRef:
        name: mariadb

  podSecurityContext:
    runAsUser: 0

  securityContext:
    allowPrivilegeEscalation: false

  livenessProbe:
    exec:
      command:
        - bash
        - -c
        - mysql -u root -p"${MARIADB_ROOT_PASSWORD}" -e "SELECT 1;"
    initialDelaySeconds: 20
    periodSeconds: 10
    timeoutSeconds: 5

  readinessProbe:
    exec:
      command:
        - bash
        - -c
        - mysql -u root -p"${MARIADB_ROOT_PASSWORD}" -e "SELECT 1;"
    initialDelaySeconds: 20
    periodSeconds: 10
    timeoutSeconds: 5

  service:
    type: ClusterIP
